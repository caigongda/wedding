<scroll-view class='tmpl-header-wrap'  scroll-x>
  <block wx:for="{{tmplclassarr}}" 
         wx:key="index" 
         wx:for-index="index" 
         wx:for-item="item">
    <view class='tmpl-list-top' 
          id="{{curtemid==item.id?'tmplactive':''}}" 
          data-index="{{index}}"
          data-id='{{item.id}}'
          bindtap='selTmpl'>
    {{item.name}}
    </view>
  </block>
</scroll-view>

<view class='tmpl-list-wrap'>
    <block wx:for="{{tmplarr}}" 
         wx:key="index" 
         wx:for-index="index" 
         wx:for-item="item">
    <view class='list-img-wrap' data-temid="{{item.templateclass_id}}" bindtap='cardShare'>
        <image data-temid="{{item.templateclass_id}}" src="{{'http://hy.xiaolongshu.com'+item.image}}"></image></view>
    </block>
</view>