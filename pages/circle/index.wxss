.circle-header-top{
  width: 100%;
  height: 88rpx; 
  background: #fff;
  color: #F46954;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  padding: 0 26rpx;
  border-bottom:1px solid #dddddd;
  align-items: center;
  box-shadow: 0px 2px 5px 0px rgba(174, 174, 174, 0.5);
  position: fixed;
}
.circle-btn-report{
  width: 124rpx;
  height: 50rpx;
  border: 1px solid #F46954 !important;
  border-radius: 30rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #F46954 !important;
}
.circle-btn-search{
  display: table-cell;
  vertical-align: middle;
  border: 1px solid #F46954 !important;
  color: #F46954 !important;
}
.h81{
  height: 169rpx;
  width: 100%;
}
.circle-legend-wrap{
  position: fixed;
  top: 88rpx;
  width: 100%;
  height: 81rpx;
  overflow: hidden;
  background: #fff;
  padding: 0;
  white-space: nowrap;
}
.scroll-view-legend{
  height: 80rpx;
}
.list-legend-top{
  width: 110rpx;
  height: 42rpx;
  font-size: 25rpx;
  color: #919191;
  margin-top: 19rpx;
  display: inline-block;
  margin-left: 16rpx;
  background: #EEEEEE;
  border-radius: 15rpx;
  text-align: center;
  line-height: 42rpx;
}
#selected{
  background: #FEE0DC;
  color: #E35F4B;
}
.circle-content-list{
  width: 100%;
  height: auto;
  padding: 16rpx;
  box-sizing:border-box;
  border-bottom:1px solid #dddddd;
}
.list-user-img{
  width: 46rpx;
  height: 46rpx;
}
.list-user-img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.content-list-name{
  height: 46rpx;
  line-height: 46rpx;
  padding: 0 0 14rpx 0;
  font-size: 25rpx;
  display: flex;
}
.list-user-name{
  color: #BDBDBD;
  margin-left: 11rpx;
  box-sizing: border-box;
  width: 90%;
}
.content-list-title{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.content-list-main{
  width: 100%;
  height: 72rpx;
  line-height: 40rpx;
  color: #464646;
  font-size: 25rpx;
}
.content-img-wrap{
  width: 100%;
  margin-top:36rpx;
  display: flex;
  justify-content:space-between;
}
.content-list-img{
  width: calc(calc(100% - 52rpx)/3);
  height: 222rpx;
  margin-right:26rpx;
}
.content-list-img:nth-child(3n){
  margin-right:0;
}
.content-list-img image{
  width: 100%;
  height: 100%;
}