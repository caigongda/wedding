.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
}
.weui-icon-search {
  margin-right: 8px;
  font-size: inherit;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}
.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28px;
}
.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #DC3C24;
  white-space: nowrap;
}
/* search结束 */
.circle-content-list{
  width: 100%;
  height: auto;
  padding: 16rpx;
  box-sizing:border-box;
  border-bottom:1px solid #dddddd;
}
.list-user-img{
  width: 46rpx;
  height: 46rpx;
}
.list-user-img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.content-list-name{
  height: 46rpx;
  line-height: 46rpx;
  padding: 0 0 14rpx 0;
  font-size: 25rpx;
  display: flex;
}
.list-user-name{
  color: #BDBDBD;
  margin-left: 11rpx;
  box-sizing: border-box;
  width: 90%;
}
.content-list-title{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.content-list-main{
  width: 100%;
  height: 72rpx;
  line-height: 40rpx;
  color: #464646;
  font-size: 25rpx;
}
.content-img-wrap{
  width: 100%;
  margin-top:36rpx;
  display: flex;
  justify-content:space-between;
}
.content-list-img{
  width: calc(calc(100% - 52rpx)/3);
  height: 222rpx;
  margin-right:26rpx;
}
.content-list-img:nth-child(3n){
  margin-right:0;
}
.content-list-img image{
  width: 100%;
  height: 100%;
}
.scroll-list{
  height: calc(100% - 169rpx);
}