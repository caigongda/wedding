<view class='person-header-top'>
  <view class='person-header-img'>
    <image src="{{userimg}}"></image>
  </view>
  <view class='person-header-info'>
    <text>{{username}}</text>
    <text>{{usertel}}</text>
  </view>
</view>
<view class='content-list-wrap'>
  <button class='content-list-row' bindtap='editPass' style='display:none;'>
    <view class='list-row-left'>
      <text class="iconfont icon-mima">
        <text class='text-icon-left'>修改密码</text>
      </text>
    </view>
    <view class='list-row-right'>
      <text class="iconfont icon-xiangyou"></text>
    </view>
  </button>
  <button class='content-list-row' data-title='所有相册' data-wedid="0" bindtap='openPicture'>
    <view class='list-row-left'>
      <text class="iconfont icon-xiangce">
        <text class='text-icon-left'>相册照片</text>
      </text>
    </view>
    <view class='list-row-right'>
      <text class="iconfont icon-xiangyou"></text>
    </view>
  </button>
  <button  class='content-list-row' bindtap='onlineCon'>
    <view class='list-row-left'>
      <text class="iconfont icon-kefu">
        <text class='text-icon-left'>在线客服</text>
      </text>
    </view>
    <view class='list-row-right'>
      <text class="iconfont icon-xiangyou"></text>
    </view>
  </button>
  <button class='content-list-row' bindtap='helpNote'>
    <view class='list-row-left'>
      <text class="iconfont icon-xinxishuoming">
        <text class='text-icon-left'>帮助说明</text>
      </text>
    </view>
    <view class='list-row-right'>
      <text class="iconfont icon-xiangyou"></text>
    </view>
  </button>
</view>